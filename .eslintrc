{
  "extends": [
    "@remix-run/eslint-config",
    "@remix-run/eslint-config/node",
    "prettier"
  ],
  "ignorePatterns": ["node_modules/*", ".cache/*", "build"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "printWidth": 100,
        "bracketSpacing": false,
        "singleQuote": true
      }
    ]
  }
}
